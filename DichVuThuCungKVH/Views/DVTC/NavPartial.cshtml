    <!-- Modal Đăng Nhập -->
    <div id="loginModal" class="modal">
        <div class="modal-content login-container">
            <span class="close" onclick="closeModal('loginModal')">×</span>
            <h4>@ViewBag.ThongBao</h4>
            <h2>ĐĂNG NHẬP</h2>
            @using (Html.BeginForm("DangNhap", "User"))
            {
                @Html.ValidationSummary(true, "", new { @class = "error-message" })
                <table>
                    <tr>
                        <td>Tên đăng nhập:</td>
                        <td>
                            @Html.TextBox("TenDN")
                            <div class="error-message">@ViewData["Err1"]</div>
                        </td>
                    </tr>
                    <tr>
                        <td>Mật khẩu:</td>
                        <td>
                            @Html.Password("MatKhau")
                            <div class="error-message">@ViewBag.Err2</div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="Đăng nhập" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>

    <style type="text/css">
        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 800;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.5);

        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 500px;
            border-radius: 5px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
            }

        /* Register Form Styles */
        #registerModal table {
            width: 100%;
            margin: auto;
            border-collapse: collapse;
            border-spacing: 0;
        }

        #registerModal tr {
            height: 40px;
        }

        #registerModal th, #registerModal td {
            padding: 2px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            border-radius: 10px;
        }

        #registerModal tr:hover {
            background-color: #f5f5f5;
        }

        #registerModal h2 {
            text-align: center;
            color: #333;
        }

        #registerModal h4 {
            text-align: center;
            color: red;
        }

        #registerModal input[type="text"],
        #registerModal input[type="password"],
        #registerModal input[type="date"] {
            width: 90%;
            padding: 8px;
            margin: 5px 0;
            box-sizing: border-box;
            border-radius: 10px;
        }

        #registerModal input[type="submit"],
        #registerModal input[type="reset"] {
            background-color: #4CAF50;
            color: white;
            padding: 5px 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 18px;
            margin: 2px 1px;
            cursor: pointer;
            border: none;
            border-radius: 10px;
        }

        /* Login Form Styles */
        .login-container {
            width: 100%;
            max-width: 350px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f8f8f8;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            font-family: Arial, sans-serif;
        }

            .login-container h2 {
                text-align: center;
                color: #333;
                margin-bottom: 20px;
            }

            .login-container h4 {
                text-align: center;
                color: red;
                margin-bottom: 15px;
            }

            .login-container table {
                width: 100%;
            }

            .login-container td {
                padding: 10px 0;
            }

            .login-container input[type="text"],
            .login-container input[type="password"] {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
                font-size: 18px;
            }

            .login-container input[type="submit"] {
                width: 100%;
                background-color: #4CAF50;
                color: white;
                padding: 10px;
                margin-top: 15px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 18px;
            }

                .login-container input[type="submit"]:hover {
                    background-color: #45a049;
                }

        .error-message {
            color: red;
            font-size: 18px;
        }
    </style>

    <script type="text/javascript">
        function openRegisterModal() {
            document.getElementById("registerModal").style.display = "block";
            document.getElementById("loginModal").style.display = "none";
        }

        function openLoginModal() {
            document.getElementById("loginModal").style.display = "block";
            document.getElementById("registerModal").style.display = "none";
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = "none";
        }

        // Đóng modal khi nhấn bên ngoài
        window.onclick = function (event) {
            var registerModal = document.getElementById("registerModal");
            var loginModal = document.getElementById("loginModal");
            if (event.target == registerModal) {
                registerModal.style.display = "none";
            }
            if (event.target == loginModal) {
                loginModal.style.display = "none";
            }
        }
    </script>

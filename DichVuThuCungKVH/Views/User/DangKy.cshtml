@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #bbdefb); /* Nền nhẹ */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .register-form {
        width: 100%;
        max-width: 500px;
        background-color: #fff;
        padding: 30px 40px;
        border-radius: 15px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        position: relative;
    }

        .register-form h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #0d47a1;
        }

    .error-message {
        color: red;
        text-align: center;
        margin-bottom: 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
    }

    input[type="text"],
    input[type="password"],
    input[type="date"] {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        box-sizing: border-box;
        transition: border 0.3s;
    }

    input:focus {
        border: 1px solid #1976d2;
        outline: none;
    }

    .field-validation {
        color: red;
        font-size: 13px;
        margin-top: 5px;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    input[type="submit"],
    input[type="reset"] {
        width: 48%;
        background-color: #1976d2;
        color: white;
        padding: 10px;
        font-size: 16px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    input[type="reset"] {
        background-color: #e53935;
    }

    input[type="submit"]:hover {
        background-color: #1565c0;
    }

    input[type="reset"]:hover {
        background-color: #c62828;
    }
</style>

<div class="register-wrapper">
    <div class="register-form">
        <h2>ĐĂNG KÝ THÀNH VIÊN</h2>

        @if (!string.IsNullOrEmpty(ViewBag.ThongBao as string))
        {
            <div class="error-message">@ViewBag.ThongBao</div>
        }

        @using (Html.BeginForm("DangKy", "User"))
        {
            @Html.ValidationSummary(true, "", new { @class = "error-message" })

            <div class="form-group">
                <label>Họ tên:</label>
                @Html.TextBox("HoTen")
                <div class="field-validation">@ViewData["err1"]</div>
            </div>

            <div class="form-group">
                <label>Tên đăng nhập:</label>
                @Html.TextBox("TenDN")
                <div class="field-validation">@ViewData["err2"]</div>
            </div>

            <div class="form-group">
                <label>Mật khẩu:</label>
                @Html.Password("MatKhau")
                <div class="field-validation">@ViewData["err3"]</div>
            </div>

            <div class="form-group">
                <label>Mật khẩu nhập lại:</label>
                @Html.Password("MatKhauNL")
                <div class="field-validation">@ViewData["err4"]</div>
            </div>

            <div class="form-group">
                <label>Email:</label>
                @Html.TextBox("Email")
                <div class="field-validation">@ViewData["err5"]</div>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                @Html.TextBox("DienThoai")
                <div class="field-validation">@ViewData["err6"]</div>
            </div>

            <div class="form-group">
                <label>Ngày sinh:</label>
                <input type="date" name="NgaySinh" />
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" name="DiaChi" />
            </div>

            <div class="btn-container">
                <input type="submit" value="Đăng ký" />
                <input type="reset" value="Xóa thông tin" />
            </div>
        }
    </div>
</div>


@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    tr {
        height: 40px;
    }
</style>


<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm("DangKy", "User"))
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>Họ tên:</td>
            <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
        </tr>

        <tr>
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN") @ViewData["err2"]</td>
        </tr>

        <tr>
            <td>Mật khẩu:</td>
            <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
        </tr>

        <tr>
            <td>Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
        </tr>

        <tr>
            <td>Email:</td>
            <td>@Html.TextBox("Email") @ViewData["err5"]</td>
        </tr>

        <tr>
            <td>Điện thoại:</td>
            <td>@Html.TextBox("DienThoai") @ViewData["err6"]</td>
        </tr>

        <tr>
            <td>Ngày sinh:</td>
            <td><input type="date" name="NgaySinh" /></td>
        </tr>

        <tr>
            <td>Địa chỉ:</td>
            <td><input type="text" name="DiaChi" /></td>
        </tr>

        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />  <input type="reset" value="Xóa
Thông Tin" />
            </td>
        </tr>
    }
</table>

<style type="text/css">
    table {
        width: 60px;
        height:150px;
        margin: auto;
        border-collapse: collapse;
        border-spacing: 0;
    }

    th, td {
        padding: 2px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    h2 {
        text-align: center;
        color: #333;
    }

    h4 {
        text-align: center;
        color: red;
    }

    input[type="text"],
    input[type="password"],
    input[type="date"] {
        width: 90%;
        padding: 8px;
        margin: 5px 0;
        box-sizing: border-box;
    }

    input[type="submit"],
    input[type="reset"] {
        background-color: #4CAF50;
        color: white;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 2px 1px;
        cursor: pointer;
        border: none;
        border-radius: 1px;
    }
</style>
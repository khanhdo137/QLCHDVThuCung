@model IEnumerable<DichVuThuCungKVH.Model.TaiKhoan>

@{
    ViewBag.Title = "Quản Lý Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Quản Lý Tài Khoản</h6>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm Mới
            </a>
        </div>
        <div class="card-body">
            <!-- Form tìm kiếm -->
            @using (Html.BeginForm("Search", "TaiKhoans", FormMethod.Get))
            {
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm tài khoản...">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Tìm kiếm
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Tên Tài Khoản</th>
                            <th>Mật Khẩu</th>
                            <th>Loại Tài Khoản</th>
                            <th>Trạng Thái</th>
                            <th style="width: 200px;">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TenTK)</td>
                                <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                                <td>@Html.DisplayFor(modelItem => item.LoaiTK)</td>
                                <td>
                                    @if (item.TrangThai == true)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Khóa</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.MaTK }, new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaTK }, new { @class = "btn btn-info btn-sm" })
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaTK }, new { @class = "btn btn-danger btn-sm" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                }
            });
        });
    </script>
}
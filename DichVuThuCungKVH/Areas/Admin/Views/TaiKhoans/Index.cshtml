@model IEnumerable<DichVuThuCungKVH.Model.TaiKhoan>

@{
    ViewBag.Title = "QUẢN LÝ TÀI KHOẢN";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">QUẢN LÝ TÀI KHOẢN</h2>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Thêm Mới</a>
    </p>
    <!-- Form tìm kiếm -->
    @using (Html.BeginForm("Search", "TaiKhoans", FormMethod.Get))
    {
        <div class="input-group mb-3">
            <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm..." aria-describedby="button-search">
            <button type="submit" class="btn btn-primary" id="button-search">Tìm kiếm</button>
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.TenTK)</th>
                <th>@Html.DisplayNameFor(model => model.MatKhau)</th>
                <th>@Html.DisplayNameFor(model => model.LoaiTK)</th>
                <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenTK)</td>
                    <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                    <td>@Html.DisplayFor(modelItem => item.LoaiTK)</td>
                    <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                    <td>
                        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.MaTK }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaTK }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaTK }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
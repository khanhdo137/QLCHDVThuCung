<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hệ Thống Quản Lý</title>

    <link rel="icon" href="~/Content/favicon.ico" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            padding-top: 70px;
        }

        footer {
            padding: 20px 0;
            text-align: center;
            background-color: #f8f9fa;
            border-top: 1px solid #e4e4e4;
            margin-top: 50px;
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
        }

        .navbar-inverse {
            background-color: #343a40;
            border-color: #2d3238;
        }

            .navbar-inverse .navbar-nav > li > a {
                color: #fff !important;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top shadow">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("🐾 Quản Lý Thú Cưng", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li>@Html.ActionLink("Dịch vụ", "Index", "DichVu")</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "KhachHang")</li>
                    <li>@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - Hệ Thống Quản Lý Thú Cưng</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

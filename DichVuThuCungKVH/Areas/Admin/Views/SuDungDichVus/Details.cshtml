@model DichVuThuCungKVH.Model.SuDungDichVu

@{
    ViewBag.Title = "Chi Tiết Lượt Sử Dụng Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Chi Tiết Lượt Sử Dụng Dịch Vụ</h6>
            <div>
                <a href="@Url.Action("Edit", new { id = Model.MaSDDV })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a href="@Url.Action("LuotSDDV", new { id = Model.MaKH })" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="m-0 font-weight-bold">Thông Tin Lượt Sử Dụng</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Ngày Sử Dụng:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-calendar text-primary me-2"></i>
                                    @Html.DisplayFor(model => model.Ngay, "{0:dd/MM/yyyy HH:mm}")
                                </dd>
                                <dt class="col-sm-4">Ghi Chú:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-sticky-note text-primary me-2"></i>
                                    @(string.IsNullOrEmpty(Model.GhiChu) ? "Không có" : Model.GhiChu)
                                </dd>
                                <dt class="col-sm-4">Khách Hàng:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-user text-primary me-2"></i>
                                    @(Model.KhachHang != null ? Model.KhachHang.TenKH : "Không có thông tin")
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="m-0 font-weight-bold">Thông Tin Khách Hàng</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Số Điện Thoại:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-phone text-primary me-2"></i>
                                    @(Model.KhachHang != null ? Model.KhachHang.SDT : "Không có thông tin")
                                </dd>
                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-envelope text-primary me-2"></i>
                                    @(Model.KhachHang != null ? Model.KhachHang.Email : "Không có thông tin")
                                </dd>
                                <dt class="col-sm-4">Địa Chỉ:</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                    @(Model.KhachHang != null ? Model.KhachHang.DiaChi : "Không có thông tin")
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <a href="@Url.Action("Edit", new { id = Model.MaSDDV })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a href="@Url.Action("Delete", new { id = Model.MaSDDV })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa lượt sử dụng dịch vụ này?');">
                    <i class="fas fa-trash"></i> Xóa
                </a>
                <a href="@Url.Action("LuotSDDV", new { id = Model.MaKH })" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
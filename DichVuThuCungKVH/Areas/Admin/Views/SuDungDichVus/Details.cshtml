@model DichVuThuCungKVH.Model.SuDungDichVu

@{
    ViewBag.Title = "Chi Tiết Lượt Sử Dụng Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-gray-800">Chi Tiết Lượt Sử Dụng Dịch Vụ</h2>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.MaSDDV })" class="btn btn-primary">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay Lại
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Ngày Sử Dụng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Ngay)</dd>

                        <dt class="col-sm-4">Khách Hàng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.KhachHang.TenKH)</dd>

                        <dt class="col-sm-4">Ghi Chú:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.GhiChu)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

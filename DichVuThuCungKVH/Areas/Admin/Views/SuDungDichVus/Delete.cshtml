@model DichVuThuCungKVH.Model.SuDungDichVu

@{
    ViewBag.Title = "Xóa Lượt Sử Dụng Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-gray-800">Xóa Lượt Sử Dụng Dịch Vụ</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Bạn có chắc chắn muốn xóa lượt sử dụng dịch vụ này?</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> <strong>Cảnh báo:</strong> Việc xóa lượt sử dụng dịch vụ này sẽ đồng thời xóa tất cả các phiếu nhận và chi tiết phiếu nhận liên quan. Hành động này không thể hoàn tác.
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Ngày Sử Dụng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Ngay)</dd>

                        <dt class="col-sm-4">Khách Hàng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.KhachHang.TenKH)</dd>

                        <dt class="col-sm-4">Ghi Chú:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.GhiChu)</dd>
                    </dl>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@model DichVuThuCungKVH.Model.PhieuNhan

@{
    ViewBag.Title = "Chi Tiết Phiếu Nhận";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Chi Tiết Phiếu Nhận</h6>
            <div>
                <a href="@Url.Action("Edit", new { id = Model.MaPhieu })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Thú Cưng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ThuCung.TenTC)</dd>

                        <dt class="col-sm-4">Lượt Sử Dụng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SuDungDichVu.MaSDDV)</dd>

                        <dt class="col-sm-4">Người Giao:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NguoiGiao)</dd>

                        <dt class="col-sm-4">Người Nhận:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NguoiNhan)</dd>

                        <dt class="col-sm-4">Ngày Nhận:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NgayNhan)</dd>

                        <dt class="col-sm-4">Tình Trạng Dịch Vụ:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TinhTrangDichVu)</dd>

                        <dt class="col-sm-4">Ngày Trả:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NgayTra)</dd>

                        <dt class="col-sm-4">Người Trả:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NguoiTra)</dd>

                        <dt class="col-sm-4">Ghi Chú:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.GhiChu)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-image me-2"></i>Tình Trạng Trước Tiếp Nhận
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.TinhTrangTruocTiepNhan))
                            {
                                <img src="@Url.Content(Model.TinhTrangTruocTiepNhan)" alt="Tình trạng trước tiếp nhận" class="img-fluid rounded" style="max-height: 300px;" onerror="this.onerror=null;this.src='/Images/no-image.png';" />
                            }
                            else
                            {
                                <div class="text-muted">
                                    <i class="fas fa-image fa-3x mb-3"></i>
                                    <p>Chưa có hình ảnh</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
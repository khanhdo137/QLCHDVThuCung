@model DichVuThuCungKVH.Model.PhieuNhan

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Details</h2>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">PhieuNhan</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TinhTrangTruocTiepNhan)</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.TinhTrangTruocTiepNhan))
                    {
                        <img src="@Url.Content("~/Images/TinhTrangTruocTiepNhan/" + Model.TinhTrangTruocTiepNhan)" alt="Image" class="img-thumbnail" />
                    }
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TinhTrangSauTiepNhan)</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.TinhTrangSauTiepNhan))
                    {
                        <img src="@Url.Content("~/Images/TinhTrangSauTiepNhan/" + Model.TinhTrangSauTiepNhan)" alt="Image" class="img-thumbnail" />
                    }
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NguoiGiao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NguoiGiao)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NguoiNhan)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NguoiNhan)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NgayNhan)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayNhan)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TinhTrangDichVu)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TinhTrangDichVu)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NgayTra)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTra)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NguoiTra)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NguoiTra)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.GhiChu)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.GhiChu)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ThuCung.TenTC)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ThuCung.TenTC)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.MaPhieu }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
    </div>
</div>
@model DichVuThuCungKVH.Model.PhieuNhan

@{
    ViewBag.Title = "Chỉnh Sửa Phiếu Nhận";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Chỉnh Sửa Phiếu Nhận</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "PhieuNhans", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MaPhieu)

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.MaLuotSDDV, "Mã Lượt Sử Dụng Dịch Vụ", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.DropDownList("MaLuotSDDV", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaLuotSDDV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        @Html.LabelFor(model => model.MaNhanVien, "Nhân Viên Phụ Trách", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.DropDownList("MaNhanVien", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-sm-3 col-form-label">Hình Ảnh Hiện Tại</label>
                        <div class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.TinhTrangTruocTiepNhan))
                            {
                                <img src="@Url.Content("~" + Model.TinhTrangTruocTiepNhan)" alt="Ảnh hiện tại" class="img-thumbnail mb-2" style="max-height: 200px" />
                            }
                            else
                            {
                                <p class="text-muted">Chưa có ảnh</p>
                            }
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-sm-3 col-form-label">Cập Nhật Hình Ảnh</label>
                        <div class="col-sm-9">
                            <input type="file" name="TinhTrangTruocTiepNhan" class="form-control" accept="image/*" />
                            <small class="text-muted">Để trống nếu không muốn thay đổi ảnh</small>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col-sm-9 offset-sm-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu Thay Đổi
                            </button>
                            @Html.ActionLink("Quay Lại", "PhieuCuaLuotSDDV", new { id = Model.MaLuotSDDV }, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
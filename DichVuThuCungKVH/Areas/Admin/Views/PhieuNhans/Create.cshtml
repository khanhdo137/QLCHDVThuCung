@model DichVuThuCungKVH.Models.PhieuNhan

@{
    ViewBag.Title = "Tạo Phiếu Nhận";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center">Tạo Phiếu Nhận</h2>
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Create", "PhieuNhans", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaLuotSDDV, "Mã Lượt Sử Dụng Dịch Vụ", new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownList("MaLuotSDDV", null, "-- Chọn Lượt Sử Dụng Dịch Vụ --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaLuotSDDV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaNhanVien, "Nhân Viên Phụ Trách", new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownList("MaNhanVien", null, "-- Chọn Nhân Viên --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Hình Ảnh Tình Trạng Trước Tiếp Nhận</label>
                        <div class="col-md-8">
                            <input type="file" name="TinhTrangTruocTiepNhan" class="form-control" accept="image/*" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Tạo mới" class="btn btn-primary" />
                            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
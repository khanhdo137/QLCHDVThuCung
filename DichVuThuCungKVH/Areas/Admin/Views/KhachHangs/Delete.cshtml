@model DichVuThuCungKVH.Model.KhachHang

@{
    ViewBag.Title = "Xóa Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-user-minus me-2"></i>Xóa Khách Hàng</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Bạn có chắc chắn muốn xóa khách hàng này?</strong>
                        <p class="mb-0 mt-2">Hành động này sẽ xóa vĩnh viễn:</p>
                        <ul class="mb-0">
                            <li>Thông tin khách hàng</li>
                            <li>Tất cả đơn hàng liên quan</li>
                            <li>Tất cả thú cưng liên quan</li>
                            <li>Tất cả lượt sử dụng dịch vụ</li>
                        </ul>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Họ và Tên</label>
                                <p class="form-control-static">@Html.DisplayFor(model => model.TenKH)</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Ngày Sinh</label>
                                <p class="form-control-static">@Html.DisplayFor(model => model.NgaySinh)</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Số Điện Thoại</label>
                                <p class="form-control-static">@Html.DisplayFor(model => model.SDT)</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <p class="form-control-static">@Html.DisplayFor(model => model.Email)</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Tài Khoản</label>
                                <p class="form-control-static">@Html.DisplayFor(model => model.TaiKhoan.TenTK)</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Địa Chỉ</label>
                                <p class="form-control-static">@Html.DisplayFor(model => model.DiaChi)</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Giới Tính</label>
                                <p class="form-control-static">@(Model.GioiTinh == true ? "Nam" : "Nữ")</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Thời Gian Đăng Ký</label>
                                <p class="form-control-static">@Html.DisplayFor(model => model.ThoiGianDangKy)</p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Tình Trạng Liên Hệ</label>
                                <p class="form-control-static">
                                    @if (Model.TinhTrangLienHe == true)
                                    {
                                        <span class="badge bg-success">Đang hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Không hoạt động</span>
                                    }
                                </p>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Ghi Chú</label>
                                <p class="form-control-static">@Html.DisplayFor(model => model.GhiChu)</p>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay Lại
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này? Hành động này không thể hoàn tác!');">
                                <i class="fas fa-trash me-2"></i>Xóa Khách Hàng
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@model DichVuThuCungKVH.Model.CTPhieuNhan_DichVu

@{
    ViewBag.Title = "Chi Tiết Phiếu Nhận Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi Tiết Phiếu Nhận Dịch Vụ</h2>

<div>
    <h4>Thông Tin Chi Tiết Phiếu Nhận Dịch Vụ</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Dịch Vụ Sử Dụng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DichVuSuDung)
        </dd>

        <dt>
            Người Thực Hiện
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NguoiThucHien)
        </dd>

        <dt>
            Thời Gian
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThoiGian)
        </dd>

        <dt>
            Số Lượng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Đơn Giá
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DonGia) VNĐ
        </dd>

        <dt>
            Ghi Chú
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

        <dt>
            Tên Dịch Vụ
        </dt>
        <dd>
            @(Model.DichVu != null ? Model.DichVu.TenDichVu : "Không có dịch vụ")
        </dd>

        <dt>
            Tình Trạng Trước Tiếp Nhận
        </dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.PhieuNhan?.TinhTrangTruocTiepNhan))
            {
                <img src="@Url.Content("~/Images/TinhTrangTruocTiepNhan/" + Model.PhieuNhan.TinhTrangTruocTiepNhan)" alt="Ảnh Trước Tiếp Nhận" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaCT }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>